<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.khilman.www.layoutingandroid.MainActivity">
    <Button
        android:id="@+id/btnLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linear Layout Example"/>
    <Button
        android:id="@+id/btnRelativeSatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relative Layout Example"/>
    <Button
        android:id="@+id/btnRelativeDua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linear Layout Example II"/>
    <Button
        android:id="@+id/btnScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ScrollView Example"/>
    <Button
        android:id="@+id/btnTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TableLayout Example"/>
</LinearLayout>

