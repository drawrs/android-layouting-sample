<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.khilman.www.layoutingandroid.ScrollViewActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">android:layout_marginHorizontal="10dp"
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/tukang_bubur_naek_haji"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginVertical="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/foto_bmkg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/sening_12_januari_2018"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/isi_artikel"/>
    </LinearLayout>
</ScrollView>
